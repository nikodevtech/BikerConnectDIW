@model BikerConnectDIW.DTO.QuedadaDTO

@{
    ViewData["Title"] = "registroQuedada";
}

<div class="container py-4">
    <div class="registro cardPrincipal">
        <form class="custom-form" asp-action="/privada/quedadas/planificar-quedada" method="post" asp-object="QuedadaDTO">
            <h2 class="text-center mb-4"><i class="bi bi-calendar2-date" style="color: #1f3c85;"> Planificar quedada</i></h2>
            <div class="alert alert-warning text-center mb-4" role="alert">
                ¡Atención! Al planificar esta quedada, aceptas la condición de ser el organizador y responsable de la misma.
            </div>
            <div class="mb-3">
                <label for="Lugar" class="form-label textoPrincipal">Lugar</label>
                <input asp-for="Lugar" type="text" name="Lugar" id="Lugar" class="form-control" placeholder="Introduzca la ubicación" required />
            </div>
            <div class="mb-3">
                <label for="FechaHora" class="form-label textoPrincipal">Fecha y hora</label>
                <input for="FechaHora" type="datetime-local" name="FechaHora" id="FechaHora" class="form-control" min="@DateTime.Now.AddDays(1).ToString("yyyy-MM-ddTHH:mm")" required />
            </div>
            <div class="mb-3">
                <label for="Descripcion" class="form-label textoPrincipal">Descripción</label>
                <input asp-for="Descripcion" name="Descripcion" id="Descripcion" type="text" class="form-control" placeholder="Introduzca una breve descripción" required />
            </div>
            <div class="mb-3">
                <label for="estado" class="form-label textoPrincipal">Estado</label>
                <select asp-for="Estado" asp-items='new List<SelectListItem>
                    {
                        new SelectListItem{ Text="Planificada", Value="Planificada", Selected=true },
                        new SelectListItem{ Text="Completada", Value="Completada", Disabled=true },
                        new SelectListItem{ Text="Cancelada", Value="Cancelada", Disabled=true },
                    }' class="form-control" required>
                </select>
            </div>
            <button type="submit" id="btnRegistro" class="btn btn-primary mt-5"><i class="bi bi-calendar2-date fs-5"> Planificar</i></button>
        </form>
    </div>
</div>


